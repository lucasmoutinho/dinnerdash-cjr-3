<div class="row account-screen">

  <div class="col-sm-7 image"></div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

  <div class="col-sm-5 sign-up">
      <%= link_to "dinnerdash", root_path, class: "logo col-sm-10 col-md-offset-1"%>
      <div class="field col-sm-10 col-md-offset-1">
        <%= f.label :nome, class: "form-label" %>
        <%= f.text_field :username, autofocus: true, class: "form-control" %>
      </div>

      <div class="field col-sm-10 col-md-offset-1">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="field col-sm-10 col-md-offset-1">
        <%= f.label :Senha, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="field col-sm-10 col-md-offset-1">
        <%= f.label :confirme_sua_senha, class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="actions col-sm-10 col-md-offset-1 ">
        <br /><%= f.submit "cadastrar", class: "btn btn-success btn-block" %>
      </div>

      <div class="redirect-account">
        <hr class = "line col-sm-10" >
        <p class="question col-sm-10 col-md-offset-1">JÃ¡ possui conta?</p>
        <div class="actions col-sm-10 col-md-offset-1 ">
          <%= link_to "fazer login", new_user_session_path, class: "btn btn-success btn-outline btn-block"%>
        </div>
      </div>

  </div>
  <% end %>

</div>
