<div class="edit-screen">
  <div class="image">
    <div class="image-text">
      <p class="title">Seu Perfil</p>
      <p class="subtitle">Atualize os seus dados pessoais e senha</p>
    </div>
  </div>

  <div class="edit">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field col-sm-5 col-md-offset-1">
        <span class="edit-label">Nome</span><br />
        <%= f.text_field :username, autofocus: true, class: "form-control" %>
      </div>

      <div class="field col-sm-5">
        <span class="edit-label">Email</span><br />
        <%= f.email_field :email, autofocus: true, class: "form-control"%>
      </div>

      <div class="field col-sm-5 col-md-offset-1">
        <br /><span class="edit-label">Nova senha (deixe em branco caso não queira alterar)</span><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="field col-sm-5">
        <br /><span class="edit-label">Senha atual, por questões de segurança</span><br />
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control"%>
      </div>

      <div class="actions col-sm-3 col-md-offset-1">
        <br /><%= f.submit "atualizar meu perfil", class: "btn btn-success btn-block" %>
      </div>
    <% end %>
  </div>
</div>