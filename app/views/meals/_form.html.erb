<%= form_with(model: [ @meal_category, @meal_category.meals.build ], local:true ) do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :price %><br>
    <%= f.text_area :price %>
  </p>
 
 
  <p>
    <%= f.submit "salvar"%>
  </p>
<% end %>