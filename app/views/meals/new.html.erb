<div class="backoffice-page">

  <%= render 'layouts/backoffice' %>

  <div class="container">
    <h3><small>Nova refeição</small></h3>
    <hr class = "line col-sm-11 backoffice-line" >
  <%= form_for @meal do |f| %>
    <% if @meal.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@meal.errors.count, "error") %> prohibited
          this meal from being saved:
        </h2>
        <ul>
          <% @meal.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <p class="col-sm-6">
      <%= f.label :nome, class: "form-label" %><br>
      <%= f.text_field :title, class: "form-control" %>
    </p>
   
    <p class="col-sm-6">
      <%= f.label :categoria, class: "form-label"%>
      <%= select_tag(:meal_category_id, options_from_collection_for_select(MealCategory.all.map, :id, :name), class: "form-control") %>
   </p>

    <p class="col-sm-10">
      <%= f.label :description, class: "form-label"%><br>
      <%= f.text_area :description, class: "form-control" %>
    </p>


    <p class="col-sm-6">
      <%= f.label :price, class: "form-label" %><br>
      <%= f.text_field :price, class: "form-control" %>
    </p>
    

   <p class="col-sm-6">
      <%= f.label :picture, class: "form-label" %><br>
      <%= f.file_field :picture, class: "btn" %>
    </p>
    

    <p class="col-sm-10">
        <%= f.submit "criar refeição", class: "btn btn-success col-sm-3"%>
        <%= link_to 'voltar', meals_path, class: "btn btn-gray col-sm-2" %>
    </p>
  <% end %>
  </div>
  <br>
</div>