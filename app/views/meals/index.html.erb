<h1>Listing meals</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th>Category</th>
  </tr>
 
  <% @meals.each do |meal| %>
    <tr>
      <td><%= meal.title %></td>
      <td><%= meal.description %></td>
      <td><%= meal.price %></td>
      <td><%= meal.category %></td>
      <td><%= link_to 'Show', meal_path(meal) %></td>
    </tr>
  <% end %>
</table>