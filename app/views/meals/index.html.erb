<h1>Listando Refeições</h1>
 <br>
<div>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th>Category</th>
  </tr>
 
  <% @meals.each do |meal| %>
    <tr>
      <td><%= meal.title %></td>
      <td><%= meal.description %></td>
      <td><%= meal.price %></td>
      <td><%= meal.category %></td>
      <td class="show"><%= link_to "Show", meal_path(meal.id) %></td>
      <td class="apagar"><%= link_to "Apagar", meal_path(meal.id), method: :delete %></td>
      <td class="editar"><%= link_to 'Editar', edit_meal_path(meal) %></td>
    </tr>
  <% end %>
</table>
</div>

<%= link_to "Nova Refeição", new_meal_path %>

